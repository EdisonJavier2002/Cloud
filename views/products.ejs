<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-4">GESTIÓN DE PRODUCTOS</h1>
        <div class="mt-3">
            <a href="/customers" class="btn btn-primary">Clientes</a>
            <a href="/categories" class="btn btn-secondary">Categorías</a>
            <a href="/employees" class="btn btn-info">Empleados</a>
            <a href="/products" class="btn btn-warning">Productos</a>
            <a href="/orders" class="btn btn-danger">Órdenes</a>
        </div>
    </div>
    <div class="container">
        <h1 class="mt-4">Lista de Productos</h1>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Marca</th>
                    <th>Category ID</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.id %></td>
                        <td><%= product.name %></td>
                        <td><%= product.description %></td>
                        <td><%= product.brand %></td>
                        <td><%= product.category_id %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <h2 class="mt-4">Agregar nuevo Producto</h2>
        <form action="/add-product" method="post" class="mt-3">
            <div class="form-group">
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="description">Descripción:</label>
                <input type="text" id="description" name="description" class="form-control">
            </div>
            <div class="form-group">
                <label for="brand">Marca:</label>
                <input type="text" id="brand" name="brand" class="form-control">
            </div>
            <div class="form-group">
                <label for="category_id">Category ID:</label>
                <input type="number" id="category_id" name="category_id" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Agregar Producto</button>
        </form>
    </div>
</body>
</html>
