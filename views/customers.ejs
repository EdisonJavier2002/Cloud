<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-4">GESTIÒN DE CLIENTES</h1>
        <div class="mt-3">
            <a href="/customers" class="btn btn-primary">Clientes</a>
            <a href="/categories" class="btn btn-secondary">Categorías</a>
            <a href="/employees" class="btn btn-info">Empleados</a>
            <a href="/products" class="btn btn-warning">Productos</a>
            <a href="/orders" class="btn btn-danger">Órdenes</a>
        </div>
    </div>
    <div class="container">
        <h1 class="mt-4">Lista de Clientes</h1>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                </tr>
            </thead>
            <tbody>
                <% customers.forEach(customer => { %>
                    <tr>
                        <td><%= customer.id %></td>
                        <td><%= customer.name %></td>
                        <td><%= customer.email %></td>
                        <td><%= customer.age %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <h2 class="mt-4">Agregar nuevo Cliente</h2>
        <form action="/add-customer" method="post" class="mt-3">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="age">Age:</label>
                <input type="number" id="age" name="age" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Agregar Cliente</button>
        </form>
    </div>
</body>
</html>
