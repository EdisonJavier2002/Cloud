<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-4">GESTIÓN DE EMPLEADOS</h1>
        <div class="mt-3">
            <a href="/customers" class="btn btn-primary">Clientes</a>
            <a href="/categories" class="btn btn-secondary">Categorías</a>
            <a href="/employees" class="btn btn-info">Empleados</a>
            <a href="/products" class="btn btn-warning">Productos</a>
            <a href="/orders" class="btn btn-danger">Órdenes</a>
        </div>
    </div>
    <div class="container">
        <h1 class="mt-4">Lista de Empleados</h1>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Edad</th>
                </tr>
            </thead>
            <tbody>
                <% employees.forEach(employee => { %>
                    <tr>
                        <td><%= employee.id %></td>
                        <td><%= employee.name %></td>
                        <td><%= employee.email %></td>
                        <td><%= employee.age %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <h2 class="mt-4">Agregar nuevo Empleado</h2>
        <form action="/add-employee" method="post" class="mt-3">
            <div class="form-group">
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="age">Edad:</label>
                <input type="number" id="age" name="age" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Agregar Empleado</button>
        </form>
    </div>
</body>
</html>
